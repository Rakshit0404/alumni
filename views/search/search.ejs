<!-- <div class="mx-auto mt-5 " >Sorry ! No User Found</div> -->
<% } else if(!user.length){ %>
 
  <div class="mx-auto mt-5 " >Sorry ! No User Found</div>
<% }else { %>
  
  <div class="card mb-3 mx-auto mt-5 " style="max-width: 540px;  padding: 50px;">
    <div class="row g-0">
      <% if(!user[0].images.length){ %> 
      <div class="col-md-4">
        <img src="/images/no-profile.png" class="img-fluid rounded-start" alt="...">
      </div>
      <% }else{ %>
        <img src="<%=user[0].images[0].thumbnail%> " class="img-fluid rounded-start" alt="...">
        <% } %> 
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=user[0].fullname%> </h5>
          <p class="card-text"><small class="text-muted"><%= user[0].dep%> </small></p>
          <p class="card-text  mt-5 position-absolute  end-0 "><a href="/viewprofile/<%= user[0].email%> "  style="text-decoration:none; padding: 14px 25px; 
                                                                                          background-color: rgba(211, 18, 18, 0.61);
                                                                                          color: white;
                                                                                          font-weight: bold;">Viewprofile</a></p>
          
        </div>
      </div>
    </div>
  </div>
  

  <% } %> 

</div>
