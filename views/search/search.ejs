<% layout('layouts/boilerplate') %>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">GGV Alumni</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
       
        <div class="navbar-nav ms-auto">
            <% if(!currentUser) { %>
                <div ><a
                    style="color: white; text-decoration: none;  ">LOGIN/SIGNUP</a>
                </div>
          
                <% } else { %>
                  <div> <span style="font-size: 20px; color: white; font-weight: 400; ">
                    <i class="bi bi-person" style="margin-right: 8px; font-size: 25px; " ></i><%=currentUser.username%>
                    </span> </div>
                  <% } %>
          </div>
      
      </div>
    </div>
  </nav>

  <div style="overflow: scroll; width:100vw; height: 100vh; ">
  <form action="/search" method="post">

    <div class="input-group flex-nowrap mt-5 w-50 mx-auto ">
      <input type="text" class="form-control" placeholder="Search for an alumni" name="search" aria-label="Username" aria-describedby="addon-wrapping">
      <span class="input-group-text" id="addon-wrapping"><button type="submit"  style="border: none;"  ><i class="bi bi-search"></i></button></span>
    </div>
 </form>   

   
 <% if(user[0].isNothing){%> 
