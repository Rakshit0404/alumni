<div id=navbar>
  <div id=shrinkbar><i id=toggle class="bi bi-list"></i></div>
  <div class=navcontent>
    <div class=navitems onclick="location.href='/#topbar';"><a style="text-decoration: none; color: inherit;">HOME</a>
    </div>
    <div class=navitems onclick="location.href='/#about';"><a style="text-decoration: none; color: inherit; ">ABOUT</a>
    </div>
    <div class=navitems onclick="location.href='/#committee';"><a
        style="text-decoration: none; color: inherit; ">COMMITTEE</a></div>
    <div class=navitems onclick="location.href='/contactus';"><a
        style="text-decoration: none; color: inherit;">CONTACT</a></div>
    <div class=navitems onclick="location.href='/#happenings';"><a
        style="text-decoration: none; color: inherit;">EVENTS</a></div>
    <div class=navitems onclick="location.href='/blogs';"><a style="text-decoration: none; color: inherit;">BLOGS</a>
    </div>
    <div class=navitems onclick="location.href='/member';"><a style="color: inherit; text-decoration: none;">MEMBERS</a>
    </div>
  </div>
  <div class=navcontent>
    <% if(userNow === "Nothing") { %>
      <div class=navitems onclick="location.href='/login';"><a
          style="color: inherit; text-decoration: none;">LOGIN/SIGNUP</a>
      </div>
    <% }else if(userNow.length === 0){ %>
      <div class="dropdown navitems">
        <div class="dropbtn" style="font-size:15px;"><%=currentUser.username%></div>
        <div class="dropdown-content">
          <a href="/userprofile">Fill Details</a>
          <a href="/logout">Log Out</a>
        </div>
      </div>
      <% } else { %>
        <div class="dropdown navitems" style="display:flex; justify-content: center; align-items: flex-start;">
          <img src="<%= userNow.images[0].url %>" style="height:50px; width:50px;">
          <div class="dropdown-content">
            <a href="/viewprofile/<%=currentUser.email%>">View Profile</a>
            <a href="/editprofile/<%=currentUser.email %>">Edit Profile</a>
            <a href="/logout">Log Out</a>
          </div>
        </div>
        <% } %>
  </div>
</div>

