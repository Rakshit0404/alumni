<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Major+Mono+Display&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Gluten:wght@200&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/topbar/topbar.css">
    <link rel="stylesheet" href="/blogtype/blogtype.css">
</head>

<body>
    <%- include('../partials/topbar') %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand"><span style="font-family: 'Major Mono Display', monospace;">BLOGSCAPE</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll"
                    aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Link
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Link</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="intro" style="background-image: url(../images/<%=corner.name%>.jpg);"></div>
        <div id="head">
            <div
                style="border-radius: 50%; background-color: white;  margin-right: 25px; width:min-content; overflow: hidden;">
                <img src="/images/<%=corner.name%>-icon.png" style="width:85px; height:85px; padding: 5px;" alt="">
            </div>
            <h1>
                /<%=corner.name %>
            </h1>
        </div>
        <div style="display: flex;">
            <div id="block">
                <div style="display: flex; flex-direction: row; width:100%; padding: 10px; margin-bottom: 20px; background-color: rgb(226, 222, 222); border-radius: 5px;"
                    onclick="location.href='/blogs/<%=corner.name %>/writeblog'">
                    <input type="text" name="" id="" placeholder="create post" style="width:inherit;">
                    <button class="icon"><i class="bi bi-images"></i></button>
                    <button class="icon"><i class="bi bi-link-45deg"></i></button>
                </div>
                <% if(corner.blogs.length!=0){ %>
                    <% for(let blog of corner.blogs){ %>
                        <div class=ablog>
                            <div class=likes>
                                <div>
                                    <div style="width:40px; height:30px; text-align:center; margin-top: 40px;">
                                        <%=blog.likes.length%>
                                    </div>

                                    <i <%if(blog.likes.indexOf(user)!=-1){ %>style="color:tomato !important;"<%}%>
                                            class="likeee bi bi-heart-fill" name="<%=blog._id%>"></i>
                                </div>
                            </div>
                            <div style="width:100%;">
                                <div class=contentcontainer>
                                    <div class=username>
                                        <span style="color:rgb(163, 162, 162);"><i class="bi bi-share-fill"></i> Posted
                                            by
                                        </span>
                                        <b><a href="/viewprofile/<%=blog.bloggerName.email%>" style="color: black;">/
                                                <%-blog.bloggerName.username%>
                                            </a></b>
                                    </div>
                                    <div class="text">
                                        <div class=over
                                            onclick="location.href='/blogs/<%= corner.name %>/<%=blog._id%>'">
                                            <p>Click to view</p>
                                        </div>
                                        <%-blog.blogText%>
                                    </div>
                                </div>
                                <div class=details>
                                    <div onclick="location.href='/blogs/<%=blogtype%>/<%=blog._id%>#forming'"
                                        style="cursor: pointer;"><i class="bi bi-chat-fill"></i>
                                        <%=blog.comments.length%> comments
                                    </div>
                                    <div><i class="bi bi-save2-fill"></i> save</div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <% } else { %>
                                <div id=noblogsyet><span>.....no blogs yet</span></div>
                                <% } %>
            </div>
            <div id="alumnis"></div>
        </div>
        <div id="page">
            <div class="pages" style="width:max-content; padding-left:4px; padding-right:4px; margin-right:40px;"
                name="<%= parseInt(index)-1 %>"><i class="bi bi-caret-left-fill"></i> prev </div>
            <% for(let i=1;i<=blognos/15+1;i++){ %>
                <% if(Math.abs(index-i)<2||i==Math.floor(blognos/15)+1||i==1){ %>
                    <div class="pages" style=<%- (index==i && "color:white;background-color:black;" )%> name="<%= i %>">
                            <%= i %>
                    </div>
                    <% } else if(Math.abs(index-i)<6){ %>
                        <span style="margin-left: 1px; margin-right: 1px;"><b>.</b></span>
                        <% } %>
                            <% } %>
                                <div class="pages"
                                    style="width:max-content; padding-left:4px; padding-right:4px; margin-left:40px;"
                                    name="<%= parseInt(index)+1 %>"> next<i class="bi bi-caret-right-fill"></i></div>
        </div>
        <script>
            console.log("<%=blognos%>")
            const pages = document.querySelectorAll(".pages");
            for (let page of pages) {
                page.addEventListener('click', (e) => {
                    const index = page.getAttribute('name');
                    if (index > 0 && index <= parseInt('<%=Math.floor(blognos/15)+1%>')) {
                        window.open(`/blogs/<%=blogtype%>?index=${index}`, "_self");
                    }
                })
            }

            const likeee = document.querySelectorAll('.likeee');
            if (likeee && likeee.length) {
                for (let li of likeee) {
                    li.addEventListener('click', (e) => {
                        var id = li.getAttribute('name');
                        $.post("/like",
                            { blogid: id, userid: `<%= user %>` },
                            function (data, status) {
                                alert("Data: " + data + "\nStatus: " + status);
                            }
                        );
                        setTimeout(() => {
                            window.location.reload();
                        }, 200)
                    })
                }
            }
        </script>
</body>

</html>