<% layout('layouts/boilerplate') %>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">GGV Alumni</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
       
        <div class="navbar-nav ms-auto">
            <% if(!currentUser) { %>
                <div ><a
                    style="color: white; text-decoration: none;  ">LOGIN/SIGNUP</a>
                </div>
          
                <% } else { %>
                  <div> <span style="font-size: 20px; color: white; font-weight: 400; ">
                    <i class="bi bi-person" style="margin-right: 8px; font-size: 25px; " ></i><%=currentUser.username%>
                    </span> </div>
                  <% } %>
          </div>
      
      </div>
    </div>
  </nav>
      



<div  style="background-color: #f4f7fd;"  >  
  <div class="container mt-5"    >
  <div class="profile">
    <% if((user.images.length)){ %>
      <div class="imageprofile" >
        <div class="img" style="background-image: url(<%=user.images[0].thumbnail%>); " >
      </div>
      <% } else{ %>
        <div class="imageprofile" >
          <div class="img" style="background-image: url(/images/no-profile.png); background-size: auto 100%; background-position: center; " >
        </div>
     
        <% } %>  
    
           
        <% if (!user.fullname){ %>
          <div class="fullname" >
            <i class="bi bi-person-fill"></i> 
          </div>
        <% }else { %>
        <div class="fullname" >
          <i class="bi bi-person-fill"></i><%= user.fullname %> 
        </div>
        <% } %> 
        <% if (!user.username) { %>
          <div class="username" >
            @(please update) 
          </div>
        <% } else { %>
        <div class="username" >
          @<%=user.username %> 
        </div>
        <% } %> 

        <% if(!user.email){ %>
          <div  class="email" >
            <i class="bi bi-envelope-fill"></i>Email :
          </div>
          <% }else{ %> 
        <div  class="email" >
          <i class="bi bi-envelope-fill"></i>Email : <%=user.email%> 
        </div>
        <% } %> 
     </div>
   
     <div class="vprofile">
       <% if (!user.school) { %>
        <div class="school" >
          <i class="bi bi-building"></i>School: 
         </div>
        <% }else{ %>
       <div class="school" >
        <i class="bi bi-building"></i>School:<%=user.school%> 
       </div>
       <% } %>
       
       <% if (!user.course) { %>
        <div class="course" >
          <i class="bi bi-book"></i>Course:
         </div>
       <% } else {%>
       <div class="course" >
        <i class="bi bi-book"></i>Course:<%= user.course%> 
       </div>
       <% } %> 
      
       <% if (!user.dep) { %>
        <div class="dep">
          <i class="bi bi-people"></i>Department: 
         </div>
       <% } else {%> 
       <div class="dep">
        <i class="bi bi-people"></i>Department: <%=user.dep%> 
       </div>
       <% } %> 
       <% if (!user.predes) { %>
        <div class="designation" >
          <i class="bi bi-briefcase"></i>Designation:
         </div>
       <% } else {%>
       
       <div class="designation" >
        <i class="bi bi-briefcase"></i>Designation:<%= user.predes%> 
       </div>

       <% } %> 

       <% if (!user.addrs) { %>
         
        <div class="address" >
          <i class="bi bi-house-door"></i> Address:
         </div>
       <% }else { %>
       
       <div class="address" >
        <i class="bi bi-house-door"></i> Address:<%=user.addrs%> 
       </div>

       <% } %>
       
       <% if(!user.mobileno){ %> 
        <div class="phone_No">
          <i class="bi bi-telephone" ></i>ContactNo: 
         </div>
        <% } else {%> 

       <div class="phone_No">
        <i class="bi bi-telephone" ></i>ContactNo:+91<%= user.mobileno%> 
       </div>

       <% } %> 
     </div>
</div>    
  </div>
  </div>


  

</div>

